    public class input
    {
        public string evaluation { get; set; }
        public string text { get; set; }
    }

    string interestPoint = "";
    int status = 0;
    input inputs = new input();

    public void GetPointInformation()
    {
        status = 1;
    }

    public void Evaluate()
    {

    }
